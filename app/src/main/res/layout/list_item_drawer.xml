<?xml version="1.0" encoding="utf-8"?>
<com.simplecity.amp_library.ui.views.ForegroundLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:foreground="?attr/list_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/drawer_horizontal_margin">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:alpha="0.6"
        android:scaleType="fitCenter"
        android:visibility="gone"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_folders_many_white"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/line_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:textSize="14sp"
        tools:text="Folders"
        android:maxLines="1" />

    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="wrap_content">

        <com.simplecity.amp_library.ui.views.NonScrollImageButton
            android:id="@+id/btn_overflow"
            android:layout_width="48dp"
            android:layout_height="44dp"
            android:alpha="0.54"
            android:background="@null"
            android:src="@drawable/ic_overflow_white"
            android:visibility="gone"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/expandable_icon"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            tools:ignore="ContentDescription"/>
    </FrameLayout>

</com.simplecity.amp_library.ui.views.ForegroundLinearLayout>