<?xml version="1.0" encoding="utf-8"?>
<com.simplecity.amp_library.ui.views.ForegroundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.simplecity.amp_library.ui.views.DragGripView
        android:id="@+id/drag_handle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="fill_vertical|start"
        android:layout_marginLeft="4dp"
        android:alpha="0.5"
        android:color="?attr/drag_grip"
        android:paddingBottom="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="24dp"
        android:paddingTop="16dp" />

    <TextView
        android:id="@+id/line_one"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="-12dp"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical"
        android:textSize="14sp"
        tools:text="Line One"
        android:maxLines="1" />

    <com.simplecity.amp_library.ui.views.CustomCheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:clickable="false" />

</com.simplecity.amp_library.ui.views.ForegroundLinearLayout>